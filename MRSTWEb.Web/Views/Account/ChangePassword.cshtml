@model MRSTWEb.Models.PasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/Custom-edit-form.css">

<div class="container" style="margin-top: 100px; margin-bottom:100px">
    <div class="form-container">

        <!-- Adjusted column width -->
        <h2>Change Password</h2>

        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "max-width: 480px;" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">

                @Html.LabelFor(m => m.CurrentPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                @Html.LabelFor(m => m.Password, new { @class = "control-label" })


                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })


                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-primary">Change Password</button>

            </div>
        }

    </div>
</div>

