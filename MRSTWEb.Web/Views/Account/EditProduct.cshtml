@model MRSTWEb.Models.BookViewModel
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/Custom-edit-form.css">

<div class="container" style="margin-top: 100px; margin-bottom: 150px">
    <div class="form-container">
        <h2>Edit Book</h2>
        @using (Html.BeginForm("EditProduct", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.PathImage)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "label-form", style = "font-size: 18px;" })
                @Html.TextBoxFor(model => model.Title, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <!-- Add style attribute to change font size -->
                @Html.LabelFor(model => model.Author, new { @class = "label-form", style = "font-size: 18px;" })
                @Html.TextBoxFor(model => model.Author, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
            <!-- Add style attribute to change font size -->
            <div class="form-group">
                @Html.LabelFor(model => model.Genre, new { @class = "label-form", style = "font-size: 18px;" })
                @Html.TextBoxFor(model => model.Genre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Genre, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Language, new { @class = "label-form", style = "font-size: 18px;" })
                @Html.TextBoxFor(model => model.Language, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Price, new { @class = "label-form", style = "font-size: 18px;" })
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("ImageFile", "Image", new { @class = "label-form", style = "font-size: 18px;" })
                <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
            </div>


            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>


