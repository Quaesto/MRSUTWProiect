@model MRSTWEb.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/custom-login-form.css" />

<div class="registration-form" style="margin-top:100px;margin-bottom:150px;">
    <h2>Register</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(u => u.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @style = "text-transform: none;" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @style = "text-transform: none;" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @style = "text-transform: none;" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword, new { @style = "text-transform: none;" })
        </div>
        <div class="form-group">
            <button type="submit">Register</button>
        </div>
    }
</div>
